pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Jenkins will automatically checkout your repo, but adding explicit git if needed
                checkout scm
            }
        }

        stage('Test OpenCart') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17' // Java 17 + Maven
                    reuseNode true
                }
            }
            steps {
                sh '''
                    mvn clean test -DsuiteXmlFile=master.xml
                '''
            }
            post {
                always {
                    // Publish TestNG/JUnit reports so Jenkins shows results
                    junit 'target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: 'target/surefire-reports/*', followSymlinks: false
                }
            }
        }
    }
}
