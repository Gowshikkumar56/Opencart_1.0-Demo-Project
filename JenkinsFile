pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // this ensures workspace is created
                checkout scm
            }
        }

        stage('Test OpenCart') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    mvn clean test -DsuiteXmlFile=master.xml
                '''
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: 'target/surefire-reports/*', followSymlinks: false
                }
            }
        }
    }
}

